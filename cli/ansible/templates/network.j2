network:
  version: 2
  ethernets:
{% if item.interfaces is defined %}
{% for iface in item.interfaces %}
    {{ iface.iface_name }}:
{% if iface.dhcp is defined %}
      dhcp4: {{ iface.dhcp }}
{% endif %}
{% if iface.ipaddress is defined %}
      addresses: [ {{ iface.ipaddress }} ]
{% endif %}
{% if iface.gateway is defined %}
      gateway4: {{ iface.gateway }}
{% endif %}
{% endfor %}
{% endif %}